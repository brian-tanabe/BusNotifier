<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="applicationIconFactory" class="com.btanabe.busnotifier.utilities.images.ApplicationIconFactory"/>
    <bean id="applicationIcon" class="fr.jcgay.notification.Icon" factory-bean="applicationIconFactory"
          factory-method="createApplicationIconIcon"/>

    <bean id="notificationIconFactory" class="com.btanabe.busnotifier.utilities.images.NotificationIconFactory"/>

</beans>